{
  "routes": [
    {
      "route": "/*",
      "redirect": "https://www.digita-energy.com{uri}",
      "statusCode": 301,
      "conditions": {
        "uriPath": ".*"
      },
      "headers": {
        "Host": "digita-energy.com"
      }
    },
    {
      "route": "/api/*",
      "allowedRoles": ["anonymous"]
    }
  ],
  "navigationFallback": {
    "rewrite": "/index.html",
    "exclude": ["/assets/*", "/api/*"]
  },
  "platform": {
    "apiRuntime": "node:18"
  },
  "globalHeaders": {
    "content-security-policy": "default-src 'self' 'unsafe-inline' 'unsafe-eval' https: data: blob:;"
  }
}
